<div class="container">
  <div class="row" style="color:white;">
    <div style="text-align: center;">
    <%= flash[:alert] %>
     </div>
    <div class="col">
      <h4 class="m-4 text-center font-weight-bold">マイページ</h4>
    </div>
  </div>
  <div class="row" style="color:white;">
    <h4 class="mb-3">登録情報編集
      <%= link_to "編集する", public_customers_information_edit_path, class: "btn btn-success" %>
    </h4>
     <table class="table" style="color:white;">
        <tbody>
          <tr>
             <th scope="row">氏名</th>
            <td>
              <%= @customer.last_name %><%= @customer.first_name %>
            </td>
          </tr>
          <tr>
             <th scope="row">カナ</th>
            <td>
              <%= @customer.last_name_kana %>
              <%= @customer.first_name_kana %>
            </td>
          </tr>
           <th scope="row">郵便番号</th>
            <td>
              <%= @customer.postal_code %>
            </td>
          </tr>
             <th scope="row">住所</th>
            <td>
           <%= @customer.address %>
            </td>
          </tr>
          </tr>
             <th scope="row">電話番号</th>
            <td>
              <%= @customer.phone_number %>
            </td>
          </tr>
          </tr>
             <th scope="row">メールアドレス</th>
            <td>
              <%= @customer.email %>
            </td>
          </tr>
        </tbody>
       </table>
       </div>
       <div class="row mb-3" style="color:white;">
         <strong>配送先</strong>
         <div class="col">
         <%= link_to "一覧を見る", public_shipping_addresses_path, class: "btn btn-primary" %>
         </div>
       <div class="col">
         <strong>注文履歴</strong>
         <%= link_to "一覧を見る", public_orders_path, class: "btn btn-primary" %>
         </div>
         </div>
          </div>