<div class="container py-5">
 <div class="col  pb-0">
    <div style="text-align:center;">
   </div>
  </div>
    <div class="row">
    <div class="col">
      <h2 class="m-4 text-center font-weight-bold">マイページ</h2>
    </div>
  </div>
  <div class="row text-center">
    <div class="mb-3 d-flex mx-auto">
    <%= link_to "編集する", public_customers_information_edit_path, class: "btn btn-lg btn-success" %>
    </div>
     <table class="table" style="color:white;">
        <tbody>
          <tr>
             <th scope="row">氏名</th>
            <td>
              <%= @customer.last_name %><%= @customer.first_name %>
            </td>
          </tr>
          <tr>
             <th scope="row">カナ</th>
            <td>
              <%= @customer.last_name_kana %>
              <%= @customer.first_name_kana %>
            </td>
          </tr>
           <th scope="row">郵便番号</th>
            <td>
              <%= @customer.postal_code %>
            </td>
          </tr>
             <th scope="row">住所</th>
            <td>
           <%= @customer.address %>
            </td>
          </tr>
          </tr>
             <th scope="row">電話番号</th>
            <td>
              <%= @customer.phone_number %>
            </td>
          </tr>
          </tr>
             <th scope="row">メールアドレス</th>
            <td>
              <%= @customer.email %>
            </td>
          </tr>
        </tbody>
      </table>

       </div>
       <div class="row mb-3" style="color:white;">
         <div class="col offset-1">
         <strong>配送先</strong>
         <%= link_to "一覧を見る", public_shipping_addresses_path, class: "btn btn-primary" %>
         </div>
       <div class="col offset-1">
         <strong>注文履歴</strong>
         <%= link_to "一覧を見る", public_orders_path, class: "btn btn-primary" %>
         </div>
        </div>
      </div>
