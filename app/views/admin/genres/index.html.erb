<table>
  <thead>
    <tr>
      <th>ジャンル一覧・追加</th>
    </tr>

  </thead>
  <tbody>
    <%= form_with model:@genre, url:admin_genres_path, method: :post do |f| %>
      <tr>
        <td>
          ジャンル名
        </td>
        <td>
          <%= f.text_field :name %>
        </td>
        <td>
          <%= f.submit '新規登録' %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>


<table>
  <thead>


<tbody>
<% @genres.each do |genre| %>
  <tr>
    <td>ジャンル</td>
    <td><%= genre.name %><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
  </tr>
<% end %>
</tbody>
