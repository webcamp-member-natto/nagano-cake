<div class='container'>
 <div class="row">
　<h4 class="col-lg-3 mb-5 mt-3 d-flex mx-auto">
   <span class="py-2 px-4 bg-ligh alert-secondary">商品詳細</span></h4>
   
     <% if @item.errors.any? %>
      <%= @item.errors.count %>件のエラーが発生しました
      <ul>
       <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
      </ul>
     <% end %>
  </div>
  
  <table style="margin:auto; color:while;">
   <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
    <tbody>
     <tr>
      <th>
       <div class="field">
       <%= f.label "商品画像" %>
      </th>
      <td><%= f.file_field :image, accept: "image/*" %>
      </div></td>
     </tr>
     <tr>
      <th>
       <div class="field">
       <%= f.label "商品名"%>
      </th>
      <td><%= f.text_field :name %>
      </div></td>
     </tr>
     <tr>
      <th>
       <div class="field">
       <%= f.label "商品説明"%>
      </th>
      <td><%= f.text_area :detail %>
      </div></td>
     </tr>
     <tr>
      <th>
       <div class="field">
       <%= f.label "ジャンル" %>
      </th>
      <td><%=f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
      </div></td>
     </tr>
     <tr>
      <th>
       <div class="field">
       <%= f.label "税抜き価格" %>
      </th>
      <td><%= f.text_field :price %>円
      </div></td>
     </tr>
     <tr>
      <th>
       <div class="form-group">
       <%=f.label:"販売ステータス" %>
      </th>
      <td><%= f.radio_button :status, :true %>
       <%= f.label :status, "販売中", {value: :true, style: "display: inline-block;"} %>
       <%= f.radio_button :status, :false %>
       <%= f.label :status, "販売停止中", {value: :false, style: "display: inline-block;"} %>
      </div></td>
     </tr>
     <tr>
      <th></th>
      <td><%= f.submit "変更を保存", class: 'btn btn-success' %></td>
     </tr>
    </tbody>
   </table>
   <% end %>
   </div>
  </div>
</div>