<h3>商品登録</h3>

<%= form_with model: @item do |f| %>

<div class="field">
<%= f.label "商品画像" %>
<%= f.file_field :image, accept: "image/*" %></br>
</div>

<div class="field">
<%= f.label "商品名"%>
<%= f.text_field :name, placeholder: "商品名" %></br>
</div>

<div class="field">
<%= f.label "商品説明"%>
<%= f.text_area :detail, placeholder: "ここに説明文を記述します" %></br>
</div>

<div class="field">
<%= f.label "ジャンル" %>
<%= f.select :genre, ['小説', 'プログラミング', 'ビジネス'], {include_blank: '--選択してください'} %>
</div>

<div class="field">
<%= f.label "税抜き価格"%>
<%= f.text_field :price, placeholder: "1000" %>
</div>

 <div class="form-group">
    <%=f.label:"公開範囲",class:"col-sm-4"%>
    <div style="padding-right:20px;">
    <%= f.radio_button :status, "販売中",checked: true %>
    <%= f.label :status, "販売中", {value: :true, style: "display: inline-block;"} %></div>
    <div style="padding-right:20px;">
    <%= f.radio_button :status, :false %>
    <%= f.label :status, "販売停止中", {value: :false, style: "display: inline-block;"} %></div>
  </div>

<% end %>