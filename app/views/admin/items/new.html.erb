<div class="container" >
 <div class="row">
  <div class="col">
<span style="background-color:grey; font-size:30px;">商品登録</span>
<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

<div class="field">
<%= f.label "商品画像" %>
<%= f.file_field :image, accept: "image/*" %></br>
</div>

<div class="field">
<%= f.label "商品名"%>
<%= f.text_field :name, placeholder: "商品名" %></br>
</div>

<div class="field">
<%= f.label "商品説明"%>
<%= f.text_area :detail, placeholder: "ここに説明文を記述します" %></br>
</div>

<div class="field">
<%= f.label "ジャンル" %>
<%= f.select :genre, ['小説', 'プログラミング', 'ビジネス'], {include_blank: '--選択してください'} %>
</div>

<div class="field">
<%= f.label "税抜き価格"%>
<%= f.text_field :price, placeholder: "1000" %>
</div>

 <div class="form-group">
    <%=f.label:"公開範囲",class:"col-sm-4"%>
    <div style="padding-right:20px;">
    <%= f.radio_button :status, "販売中",checked: true %>
    <%= f.label :status, "販売中", {value: :true, style: "display: inline-block;"} %></div>
    <div style="padding-right:20px;">
    <%= f.radio_button :status, :false %>
    <%= f.label :status, "販売停止中", {value: :false, style: "display: inline-block;"} %>
   </div></td>
  </tr>
 </tbody>
</table>

 
 
<%= f.submit "新規登録", class: 'btn btn-success' %>
<% end %>
</div>
 </div>
</div>
