<div class='container py-5'>
  <div class="row">
   <%= flash[:alart] %>
     <h4 class="col mb-5 mt-3 text-center font-weight-bold">商品詳細</h4>
      <div class="col-lg-10 offset-2 d-flex justify-content-start">
       <%= image_tag @item.image, size: "300x300" %>
        <div class="col-lg-5 pl-5">
        <table class="table ml-8" style="color:white;">
          <tbody>
           <tr>
             <th>商品名</th>
             <td><%= @item.name %></td>
            </tr>
            <tr>
             <th>
               商品説明
             </th>
             <td><%= @item.detail %></td>
            </tr>
            <tr>
             <th>
               ジャンル
             </th>
             <td><%= @item.genre.name %></td>
            </tr>
            <tr>
             <th>
               税込価格</br>
               (税抜価格)
             </th>
             <td style=" vertical-align: middle; "><%=@item.with_tax_price.to_s(:delimited) %> (<%=@item.price.to_s(:delimited) %>)円</td>
            </tr>
            <tr>
               <th class='text-nowrap'>販売ステータス</th>
                <% if @item.status? %>
              <td class="text-success text-center"><strong>販売中</strong></td>
                <% else %>
              <td class="text-black-50">販売停止中</td>
                <% end %>
             </tr>
              <tr>
               <th></th>
               <th class="text-center">
                <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary" %>
               </th>
              </tr>
             </tbody>
           </table>
         </div>
        </div>

