<div class="container">
    <h4 class="text-center my-4">注文履歴詳細</h4>

      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="table-secondary text-center">購入者</th>
            <td><%= link_to @order.name , admin_customer_path(@order.customer.id) %></td>
          </tr>
          <tr>
            <th class="table-secondary text-center">注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th class="table-secondary text-center">配送先</th>
            <td>〒<%= @order.postal_code %>　<%= @order.address %><br>
                <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th class="table-secondary text-center">支払方法</th>
            <td><%= @order.payment_method_i18n  %></td>
          </tr>
          <tr>
            <th class="table-secondary text-center">注文ステータス</th>
            <%= form_with model: @order, url: admin_order_path(@order.id), method: :patch do |f| %>
              <td>
                <%= f.select :order_status, Order.order_statuses.keys.map {|k| [I18n.t("enums.order.order_status.#{k}"), k]}, include_blank: "選択して下さい" %>
                <%= f.submit "更新", class: 'btn btn-outline-success' %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>

      <div class="row">
         <div clas ="col-md-8">
            <table class="table table-bordered mt-4">
              <thead>
                <tr class="table-secondary text-center">
                  <th>商品名</th>
                  <th>単価（税込）</th>
                  <th>数量</th>
                  <th>小計</th>
                  <th>製作ステータス</th>
                </tr>
              </thead>
              <tbody>
                  <% @order_items.each do |order_item| %>
                    <tr>
                      <td><%= order_item.item.name %></td>
                      <td><%= order_item.price.to_s(:delimited) %>円</td>
                      <td><%= order_item.quantity %></td>
                      <td><%= order_item.price * order_item.quantity %>円</td>

                      <%= form_with model: order_item, url: admin_order_detail_path(order_item.id), method: :patch do |f| %>
                        <td><%= f.select :production_status, OrderItem.production_statuses.keys.map {|k| [I18n.t("enums.order_item.production_status.#{k}"), k]}, include_blank: "選択して下さい" %>
                          <%= f.submit "更新", class: 'btn btn-outline-success' %>
                        </td>
                      <% end %>
                    </tr>
                  <% end %>
              </tbody>
            </table>
         </div>

        <div class ="col-lg-3 offset-1">
          <table class="table table-bordered mt-4">
              <thead>
                  <tr>
                    <th class="table-secondary text-center">商品合計</th>
                    <td><%= @order.price - @order.postage %>円</td>
                  </tr>
                  <tr>
                    <th class="table-secondary text-center">送料</th>
                    <td><%= @order.postage %>円</td>
                  </tr>
                  <tr>
                    <th class="table-secondary text-center">請求金額</th>
                    <td><%= @order.price.to_s(:delimited) %>円</td>
                  </tr>
              </thead>
          </table>
        </div>
      </div>
</div>
